generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  projects  Project[]
  contents  Content[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum ProjectStatus {
  ACTIVE
  INACTIVE
  COMPLETED
  CANCELLED
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  audience  String
  brand     String?
  tone      String?
  keywords  String
  channels  String
  format    String
  existingContent  String
  status    ProjectStatus
  contents  Content[]
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Content {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  channel   String
  type      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}